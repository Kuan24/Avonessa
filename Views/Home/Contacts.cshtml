@{
    if (Request.ServerVariables["HTTP_ACCEPT_LANGUAGE"].ToString().Substring(0, 2) == "ru")
    {
        ViewBag.Title = "Контакты, интернет магазин Avonessa.com";
    }
    else
    {
        ViewBag.Title = "Contacts, internet shopping Avonessa.com";
    }
}

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {
        var lang = window.navigator.language;
        if (lang.toLowerCase().indexOf("ru") >= 0) {
            $('[id="ContactEn"]').remove();
        }
        else {
            $('[id="ContactRu"]').remove();
        }
    });
    </script>
}
