@section scripts{
    <script src="http://www.pengoworks.com/workshop/jquery/field/jquery.field.js"></script>
    <script src="http://www.pengoworks.com/workshop/jquery/calculation/jquery.calculation.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            //$("[name^=qty_item_ru_]").bind(" keyup", recalc);
            $("[name^=qty_item_ru_]").keyup(recalc);
            $("[name^=qty_item_en_]").keyup(recalcEn);

            recalcEn();
            recalc();

            var sb = $.cookie("AvonessaShoppingBag");
            if (sb == null) {
                var lang = window.navigator.language;
                if (lang.toLowerCase().indexOf("ru") >= 0)
                    $('[id="ShopBag"]').text('Сумка пуста');
                else
                    $('[id="ShopBag"]').text('Shopping Bag is empty');
                $('[id="tableSBEn"]').hide();
                $('[id="tableSBRu"]').hide();
                $('[id="cTitleRu"]').hide();
                $('[id="cTitleEn"]').hide();
                $('[id="ContactsRu"]').hide();
                $('[id="ContactsEn"]').hide();
                $('[id="submitRu"]').hide();
                $('[id="submitEn"]').hide();
            }
            //На случай только для PayPal:========
            //$('[id="cTitleRu"]').hide();
            $('[id="cTitleEn"]').hide();
            //$('[id="ContactsRu"]').hide();
            $('[id="ContactsEn"]').hide();
            //====================================
        });

        function recalc() {
            $("[id^=total_item_ru]").calc(
                "qtyRu * priceRu",
                {
                    qtyRu: $("[name^=qty_item_ru_]"),
                    priceRu: $("[id^=price_item_ru_]")
                },
                function (s) {
                    return "$" + s.toFixed(2);
                },
                function ($this) {
                    var sum = $this.sum();
                    $("#grandTotalRu").text("$" + sum.toFixed(2));
                }
            );
        }

        function recalcEn() {
            $("[id^=total_item_en]").calc(
                "qtyEn * priceEn",
                {
                    qtyEn: $("[name^=qty_item_en_]"),
                    priceEn: $("[id^=price_item_en_]")
                },
                function (sEn) {
                    return "$" + sEn.toFixed(2);
                },
                function ($thisEn) {
                    var sum2 = $thisEn.sum();
                    $("#grandTotalEn").text("$" + sum2.toFixed(2));
                }
            );
        }
        // Русский, Английский:
        var lang = window.navigator.language;
        if (lang.toLowerCase().indexOf("ru") >= 0) {
            $('[id="ShopBag"]').text('Покупная сумка');
            $('[id="tableSBEn"]').remove();
            $('[id="ContactsH4En"]').remove();
            $('[id="ContactsEn"]').remove();
            $('[id="submitEn"]').remove();

        }
        else {
            $('[id="ShopBag"]').text('Shopping Bag');
            $('[id="tableSBRu"]').remove();
            $('[id="ContactsH4Ru"]').remove();
            $('[id="ContactsRu"]').remove();
            $('[id="submitRu"]').remove();

        }
        $('[id="divPriceRu"]').hide();
        $('[id="divPriceEn"]').hide();
        //Валидация Русский (исправлено для PayPal id формы SBCFormRu_, а настоящее SBCFormRu):
        $("#SBCFormRu").validate({
            rules: {
                postalCodeRu: {
                    required: true,
                    rangelength: [4, 7]
                },
                yourNameRu: {
                    required: true,
                },
                emailRu: {
                    required: true,
                    email: true
                },
                streetHomeFlatRu: {
                    required: true,
                },
                countryRu: {
                    required: true,
                },
                cityRu: {
                    required: true,
                }
            },
            messages: {
                postalCodeRu: {
                    required: "Введите почтовый индекс",
                    rangelength: "Длина должна быть от {0} до {1} знаков"
                },
                yourNameRu: {
                    required: "Введите Ваше Имя"
                },
                emailRu: {
                    required: "Введите E-mail",
                    email: "Неверный формат E-mail"
                },
                streetHomeFlatRu: {
                    required: "Введите улицу, дом, квартиру"
                },
                countryRu: {
                    required: "Введите Страну"
                },
                cityRu: {
                    required: "Введите Город, населённый пункт"
                }
            }
        });
        //Validation English (исправлено для PayPal id формы SBCFormEn_, а настоящее SBCFormEn):
        $("#SBCFormEn_").validate({
            rules: {
                postalCodeEn: {
                    required: true,
                    rangelength: [4, 20]
                },
                yourNameEn: {
                    required: true,
                },
                emailEn: {
                    required: true,
                    email: true
                }
            },
            messages: {
                postalCodeEn: {
                    required: "Enter Postal Code",
                    rangelength: "The length of the Postal Code should be from {0} to {1} characters"
                },
                yourNameEn: {
                    required: "Enter Your Name"
                },
                emailEn: {
                    required: "Enter your E-mail",
                    email: "Invalid E-mail format"
                }
            }
        });
    </script>
}



